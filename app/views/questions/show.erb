<div class="question">
  <div class="question-title">
  <%= @question.title %>
  </div>
  <%= erb :'votes/_question_vote' %>
  <div class="question-vote-count">THIS SHOULD CHANGE:
  <%= @question.get_total_votes %>
  </div>
  <div class="question-body">
  <%= @question.body %>
  </div>
  <div class="question-user">
    <%= @question.user.display_name %>
  </div>
  <div class="question-user-reputation">
    <%= @question.user.reputation %>
  </div>
    <% @question.comments.each do |comment| %>
      <% #need to replace with model method later   %>
    <div class="comment">
      <div class="comment-vote-count">
      <%= comment.votes.count %>
      </div>
      <div class="comment-body">
      <%= comment.body %>
        <% #need to replace with model method later %>
      </div>
      <div class="user-display-name">
      <%= comment.user.display_name %>
      </div>
      <div class="user-vote-count">
      <%= comment.user.reputation %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<hr>
ANSWERS START HERE
<div class="question-total-answers">
<%= @question.get_total_answers %>
</div>
<div class="answers-container">
  <% @question.answers.each do |answer| %>
  <div class="answer"><%= answer.body %></div>
  <div class="answer-comments-container">
  <% answer.comments.each do |answer_comment| %>
    <div class="answer-comment"><%= answer_comment.body %><%= answer_comment.user.display_name %>
    </div>
  <% end %>
  </div>
  <% end %>
</div>
